** Timer script, for seasonal differences
scrp 1 1 36468 9
	tick 500
	doif ov00 eq 0
		doif sean eq 1
			emit 15 1
		else
			emit 15 0.2
		endi
	elif ov01 eq 1
		doif sean eq 0 or sean eq 2
			emit 15 0.8
		else
			emit 15 0.2
		endi
	elif ov02 eq 2
		doif sean eq 3
			emit 15 1
		else
			emit 15 0.2
		endi
	endi
endm


rscr

enum 1 1 36468
	kill targ
next